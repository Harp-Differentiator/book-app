<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="book_exchange.Views.ProfilePage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Profile"/>
        <ToolbarItem Text="Sign Out"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Username"
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="StartAndExpand" />
            <Label Text="Class"
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="StartAndExpand" />
            <Label Text="Major"
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="StartAndExpand" />
            <Label Text="Major" FontSize="Title" FontAttributes="Bold"
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="StartAndExpand" />
            <Label Text="Email"
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="StartAndExpand" />
            <Label Text="Phone"
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="StartAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>